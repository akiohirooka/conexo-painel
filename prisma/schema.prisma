generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feature {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  description String?
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workspaceId])
}

model AdminSettings {
  id           String   @id @default("singleton")
  featureCosts Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Plan {
  id                String   @id @default(cuid())
  clerkId           String?  @unique
  clerkName         String?
  name              String
  credits           Int
  active            Boolean  @default(true)
  sortOrder         Int      @default(0)
  currency          String?
  priceMonthlyCents Int?
  priceYearlyCents  Int?
  description       String?
  features          Json?
  badge             String?
  highlight         Boolean  @default(false)
  ctaType           String?  @default("checkout")
  ctaLabel          String?
  ctaUrl            String?
  billingSource     String   @default("clerk")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([active])
  @@index([sortOrder])
}

model CreditBalance {
  id               String         @id @default(cuid())
  clerkUserId      String         @unique
  creditsRemaining Int            @default(100)
  lastSyncedAt     DateTime       @default(now())
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  userId           String         @unique @db.Uuid
  user             users          @relation(fields: [userId], references: [id])
  usageHistory     UsageHistory[]

  @@index([userId])
  @@index([clerkUserId])
  @@index([creditsRemaining])
  @@index([lastSyncedAt])
}

model UsageHistory {
  id              String        @id @default(cuid())
  creditBalanceId String
  operationType   OperationType
  creditsUsed     Int
  details         Json?
  timestamp       DateTime      @default(now())
  userId          String        @db.Uuid
  creditBalance   CreditBalance @relation(fields: [creditBalanceId], references: [id])
  user            users         @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([creditBalanceId])
  @@index([timestamp])
  @@index([operationType])
  @@index([userId, timestamp])
  @@index([operationType, timestamp])
}

model StorageObject {
  id          String    @id @default(cuid())
  clerkUserId String
  provider    String    @default("vercel_blob")
  url         String
  pathname    String
  name        String
  contentType String?
  size        Int
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String    @db.Uuid
  user        users     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
  @@index([clerkUserId])
  @@index([contentType])
  @@index([deletedAt])
  @@index([name])
}

model SubscriptionEvent {
  id          String   @id @default(cuid())
  clerkUserId String
  planKey     String?
  status      String
  eventType   String
  occurredAt  DateTime @default(now())
  metadata    Json?
  createdAt   DateTime @default(now())
  userId      String?  @db.Uuid
  user        users?   @relation(fields: [userId], references: [id])

  @@index([userId, occurredAt])
  @@index([clerkUserId, occurredAt])
}

model business_categories {
  id                     BigInt                   @id @default(autoincrement())
  name                   String
  slug                   String                   @unique
  created_at             DateTime                 @default(now()) @db.Timestamptz(6)
  is_active              Boolean                  @default(true)
  business_subcategories business_subcategories[]
  businesses             businesses[]
}

model business_subcategories {
  id                  BigInt              @id @default(autoincrement())
  category_id         BigInt
  name                String
  slug                String
  created_at          DateTime            @default(now()) @db.Timestamptz(6)
  business_categories business_categories @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([category_id, slug], map: "business_subcategories_unique")
  @@index([category_id], map: "business_subcategories_category_idx")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model businesses {
  id                   BigInt              @id @default(autoincrement())
  clerk_user_id        String
  business_category_id BigInt
  name                 String
  slug                 String              @unique
  site_url             String?
  category             String?
  subcategory          String[]
  description          String
  rating               Decimal?            @default(0) @db.Decimal(2, 1)
  review_count         Int                 @default(0)
  is_verified          Boolean             @default(false)
  is_open              Boolean             @default(false)
  cover_image_url      String?
  created_at           DateTime            @default(now()) @db.Timestamptz(6)
  updated_at           DateTime            @default(now()) @db.Timestamptz(6)
  address              String?
  amenities            String[]
  city                 String?
  email                String?
  gallery_images       String[]
  instagram            String?
  latitude             Decimal?            @db.Decimal(10, 8)
  longitude            Decimal?            @db.Decimal(11, 8)
  phone                String?
  state                String?
  whatsapp             String?
  zip_code             String?
  contacts_data        Json?
  is_published         Boolean             @default(false)
  logo_url             String?
  opening_hours        Json?
  operating_modes      String[]
  payment_methods      String[]
  service_languages    String[]
  specialties          String[]
  business_categories  business_categories @relation(fields: [business_category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users                users               @relation(fields: [clerk_user_id], references: [clerk_user_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([business_category_id])
  @@index([clerk_user_id])
}

model clerk_webhook_events {
  id                    BigInt    @id @default(autoincrement())
  clerk_event_id        String    @unique(map: "clerk_webhook_events_clerk_event_id_uq")
  event_type            String?
  clerk_user_id         String?
  clerk_subscription_id String?
  payload               Json
  processed_at          DateTime? @db.Timestamptz(6)
  processing_error      String?
  created_at            DateTime  @default(now()) @db.Timestamptz(6)

  @@index([clerk_subscription_id])
  @@index([clerk_user_id])
  @@index([created_at])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model subscription_plans {
  id                 BigInt               @id @default(autoincrement())
  slug               String               @unique
  name               String
  description        String?
  billing_interval   String               @default("monthly")
  price_cents        Int
  currency           String               @default("JPY")
  trial_days         Int?
  features           Json?
  is_active          Boolean              @default(true)
  created_at         DateTime             @default(now()) @db.Timestamptz(6)
  updated_at         DateTime             @default(now()) @db.Timestamptz(6)
  user_subscriptions user_subscriptions[]
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model user_subscriptions {
  id                    BigInt              @id @default(autoincrement())
  clerk_user_id         String
  plan_id               BigInt?
  status                String              @default("trialing")
  started_at            DateTime            @default(now()) @db.Timestamptz(6)
  trial_ends_at         DateTime?           @db.Timestamptz(6)
  current_period_start  DateTime?           @db.Timestamptz(6)
  current_period_end    DateTime?           @db.Timestamptz(6)
  cancel_at             DateTime?           @db.Timestamptz(6)
  canceled_at           DateTime?           @db.Timestamptz(6)
  ended_at              DateTime?           @db.Timestamptz(6)
  clerk_customer_id     String?
  clerk_subscription_id String?             @unique(map: "user_subscriptions_clerk_subscription_id_uq")
  clerk_price_id        String?
  metadata              Json?
  created_at            DateTime            @default(now()) @db.Timestamptz(6)
  updated_at            DateTime            @default(now()) @db.Timestamptz(6)
  users                 users               @relation(fields: [clerk_user_id], references: [clerk_user_id], onDelete: Cascade, onUpdate: NoAction)
  subscription_plans    subscription_plans? @relation(fields: [plan_id], references: [id], onUpdate: NoAction)

  @@index([clerk_user_id])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id                 String               @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  clerk_user_id      String               @unique
  first_name         String?
  last_name          String?
  email              String
  created_at         DateTime             @default(now()) @db.Timestamptz(6)
  updated_at         DateTime             @default(now()) @db.Timestamptz(6)
  role               String               @default("user")
  phone              String?
  creditBalance      CreditBalance?
  storageObjects     StorageObject[]
  subscriptionEvents SubscriptionEvent[]
  usageHistory       UsageHistory[]
  businesses         businesses[]
  user_subscriptions user_subscriptions[]
}

model reviews {
  id            BigInt            @id @default(autoincrement())
  clerk_user_id String            @db.VarChar(255)
  item_type     ReviewItemType
  item_id       BigInt
  rating        Int
  comment       String?
  is_visible    Boolean           @default(true)
  created_at    DateTime          @default(now()) @db.Timestamptz(6)
  updated_at    DateTime          @default(now()) @db.Timestamptz(6)
  title         String?
  response      review_responses?

  @@unique([clerk_user_id, item_type, item_id], map: "reviews_unique_user_item")
  @@index([item_type, item_id], map: "reviews_item_idx")
  @@index([clerk_user_id], map: "reviews_user_idx")
}

model review_responses {
  id                String   @id @default(cuid())
  review_id         BigInt   @unique
  responder_user_id String   @db.VarChar(255)
  body              String
  created_at        DateTime @default(now()) @db.Timestamptz(6)
  updated_at        DateTime @default(now()) @db.Timestamptz(6)
  review            reviews  @relation(fields: [review_id], references: [id], onDelete: Cascade)

  @@index([responder_user_id])
}

model favorites {
  id            BigInt         @id @default(autoincrement())
  clerk_user_id String         @db.VarChar(255)
  item_type     ReviewItemType
  item_id       BigInt
  created_at    DateTime       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime       @default(now()) @db.Timestamptz(6)

  @@unique([clerk_user_id, item_type, item_id], map: "favorites_unique_user_item")
  @@index([clerk_user_id], map: "favorites_user_idx")
}

model system_notifications {
  id                        BigInt                      @id @default(autoincrement())
  title                     String
  message                   String
  type                      NotificationType
  is_active                 Boolean                     @default(true)
  starts_at                 DateTime?                   @db.Timestamptz(6)
  ends_at                   DateTime?                   @db.Timestamptz(6)
  created_at                DateTime                    @default(now()) @db.Timestamptz(6)
  updated_at                DateTime                    @default(now()) @db.Timestamptz(6)
  system_notification_users system_notification_users[]
}

model system_notification_users {
  id                   BigInt               @id @default(autoincrement())
  notification_id      BigInt
  clerk_user_id        String               @db.VarChar(255)
  is_read              Boolean              @default(false)
  is_hidden            Boolean              @default(false)
  read_at              DateTime?            @db.Timestamptz(6)
  created_at           DateTime             @default(now()) @db.Timestamptz(6)
  updated_at           DateTime             @default(now()) @db.Timestamptz(6)
  system_notifications system_notifications @relation(fields: [notification_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([notification_id, clerk_user_id], map: "system_notification_users_unique")
  @@index([clerk_user_id], map: "system_notification_users_user_idx")
}

model events {
  id              BigInt        @id @default(autoincrement())
  clerk_user_id   String        @db.VarChar(255)
  title           String
  slug            String        @unique
  description     String
  cover_image_url String?
  starts_at       DateTime      @db.Timestamptz(6)
  ends_at         DateTime?     @db.Timestamptz(6)
  price_amount    Int?
  price_currency  String        @default("JPY")
  ticket_url      String?
  status          ListingStatus @default(DRAFT)
  is_active       Boolean       @default(true)
  published_at    DateTime?     @db.Timestamptz(6)
  approved_by     String?       @db.VarChar(255)
  approved_at     DateTime?     @db.Timestamptz(6)
  rejected_reason String?
  created_at      DateTime      @default(now()) @db.Timestamptz(6)
  updated_at      DateTime      @default(now()) @db.Timestamptz(6)
  contacts_data   Json?
  address         String?
  city            String?
  event_mode      String        @default("presencial")
  state           String?
  organizer_id    BigInt?
  gallery_images  String[]

  @@index([clerk_user_id])
  @@index([organizer_id])
  @@index([status])
  @@index([starts_at])
}

model jobs {
  id              BigInt        @id @default(autoincrement())
  clerk_user_id   String        @db.VarChar(255)
  company_name    String?
  title           String
  slug            String        @unique
  description     String
  employment_type String?
  category        String?
  salary_amount   Int?
  salary_currency String        @default("JPY")
  salary_unit     String?
  is_featured     Boolean       @default(false)
  status          ListingStatus @default(DRAFT)
  is_active       Boolean       @default(true)
  published_at    DateTime?     @db.Timestamptz(6)
  approved_by     String?       @db.VarChar(255)
  approved_at     DateTime?     @db.Timestamptz(6)
  rejected_reason String?
  created_at      DateTime      @default(now()) @db.Timestamptz(6)
  updated_at      DateTime      @default(now()) @db.Timestamptz(6)
  contacts_data   Json?
  address         String?
  application_url String?
  city            String?
  contact_email   String?
  contractor_id   BigInt?
  cover_image_url String?
  gallery_images  String[]
  is_published    Boolean       @default(false)
  state           String?
  work_model      String        @default("onsite")
  benefits        String[]      @default([])
  requirements    String[]      @default([])

  @@index([contractor_id])
  @@index([clerk_user_id])
  @@index([status])
  @@index([is_featured])
}

model support_tickets {
  id            String          @id @default(cuid())
  clerk_user_id String          @db.VarChar(255)
  category      SupportCategory @default(OTHER)
  subject       String
  message       String
  status        String          @default("open")
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  updated_at    DateTime        @default(now()) @db.Timestamptz(6)

  @@index([clerk_user_id])
  @@index([status])
  @@index([created_at])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model usage_history {
  id            BigInt   @id @default(autoincrement())
  item_type     String
  item_id       BigInt?
  clerk_user_id String?
  event_type    String
  search_query  String?
  metadata      Json?
  created_at    DateTime @default(now()) @db.Timestamptz(6)

  @@index([created_at], map: "idx_usage_history_created_at")
  @@index([item_type, item_id], map: "idx_usage_history_item")
  @@index([clerk_user_id], map: "idx_usage_history_owner")
}

enum ListingStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

enum OperationType {
  AI_TEXT_CHAT
  AI_IMAGE_GENERATION
}

enum ReviewItemType {
  BUSINESS
  EVENT
  JOB
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
}

enum SupportCategory {
  QUESTION
  BUG
  SUGGESTION
  OTHER
}
